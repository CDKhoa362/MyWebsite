@model MyWebsite.Areas.Admin.Models.Location.District
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function() {
        $('#floatingSelect').select2();
    });
</script>



<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card-header">
                <h2>Add New District </h2>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-floating mb-3">
                        <select asp-items="Model.StatesSelectList" asp-for="StateId" id="floatingSelect" class="form-select"></select>
                        <label for="floatingSelect">Thuộc Tỉnh/Thành phố</label>
                    </div>
                        
                    <div class="form-floating mb-3">
                        <input class="form-control" id="floatingInputGroup1" asp-for="DistrictId" />
                        <label for="floatingInput" asp-for="DistrictId">Mã Quận Huyện</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="floatingInputGroup1" placeholder="Ví dụ: Quận Ba Đình" asp-for="DistrictName">
                        <label for="floatingInput" asp-for="DistrictName">Tên Quận/Huyện</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                            </svg>
                            Create
                        </button>
                        <a asp-controller="District" asp-action="Index" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                            </svg>
                            Cancel
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>