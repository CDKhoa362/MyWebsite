@model MyWebsite.Models.Location.Ward

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card-header">
                <h2>Create New Ward</h2>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-floating mb-3">
                        <input class="form-control" id="floatingInputGroup1" asp-for="WardId">
                        <label for="floatingInput" asp-for="WardId">Mã Phường/Xã</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="floatingInputGroup1" placeholder="Ví dụ: Thành phố Hà Nội" asp-for="WardName">
                        <label for="floatingInput" asp-for="WardName"></label>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-items="Model.DistrictSelectedList" asp-for="DistrictId" id="floatingSelect" class="form-select"></select>
                        <label for="floatingSelect">Thuộc Quận/Huyện</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                            </svg>
                            Create
                        </button>
                        <a asp-controller="State" asp-action="Index" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                            </svg>
                            Cancel
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
